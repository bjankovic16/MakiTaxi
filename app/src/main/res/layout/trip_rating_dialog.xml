<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dialog_background"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Title -->
    <TextView
        android:id="@+id/txtRatingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How was your trip with Miki Manojlovic?"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your feedback will help improve driving experience"
        android:textColor="#666666"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Star Rating -->
    <LinearLayout
        android:id="@+id/starRatingContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/star1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_star"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            app:tint="#DDDDDD" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_star"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            app:tint="#DDDDDD" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_star"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            app:tint="#DDDDDD" />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_star"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            app:tint="#DDDDDD" />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_star"
            android:clickable="true"
            android:focusable="true"
            app:tint="#DDDDDD" />

    </LinearLayout>

    <!-- Comments Input -->
    <EditText
        android:id="@+id/etComments"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:hint="Additional comments (minimum 20 characters)..."
        android:textColorHint="#E9DDDD"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/rounded_dark_background"
        android:padding="16dp"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:layout_marginBottom="24dp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmitReview"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:text="SUBMIT REVIEW"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:background="@drawable/primary_button_background" />
</LinearLayout>