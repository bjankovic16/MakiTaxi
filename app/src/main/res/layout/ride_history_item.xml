<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dialog_background_gray"
    android:orientation="vertical"
    android:padding="16dp"
    android:elevation="2dp">

    <!-- Origin Row with Rating -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <!-- Origin Icon -->
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/point_red"
            android:layout_marginEnd="8dp" />

        <!-- Origin Address -->
        <TextView
            android:id="@+id/txtPickupLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="3dp"
            android:text="Bulevar kralja Aleksandra 308"
            android:textColor="@color/background"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Rating Display -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp">

            <ImageView
                android:id="@+id/starSingleItem"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star"
                app:tint="@android:color/holo_orange_light"
                android:visibility="gone"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/txtRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Destination Icon -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/navigation_yellow"
            android:layout_marginEnd="8dp"/>

        <!-- Destination Address -->
        <TextView
            android:id="@+id/txtDropoffLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:text="Vojislava IliÄ‡a 4A"
            android:textColor="@color/background"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Feedback Button -->
        <Button
            android:id="@+id/btnAction"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:text="GIVE FEEDBACK"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:background="@drawable/primary_button_background"
            android:layout_marginStart="8dp"
            android:minWidth="0dp"
            android:paddingHorizontal="12dp" />

    </LinearLayout>

</LinearLayout>